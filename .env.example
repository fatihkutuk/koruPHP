# Uygulama Ayarları
APP_NAME=koruPHP
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost:8000

# Veritabanı Ayarları (Ana)
DEFAULT_DB_DRIVER=mysql
DEFAULT_DB_HOST=localhost
DEFAULT_DB_PORT=3306
DEFAULT_DB_DATABASE=koruphp
DEFAULT_DB_USERNAME=root
DEFAULT_DB_PASSWORD=
DEFAULT_DB_CHARSET=utf8mb4
DEFAULT_DB_COLLATION=utf8mb4_unicode_ci
DEFAULT_DB_PERSISTENT=false

# İkincil Veritabanı (Opsiyonel)
SECONDARY_DB_DRIVER=mysql
SECONDARY_DB_HOST=localhost
SECONDARY_DB_PORT=3306
SECONDARY_DB_DATABASE=koruphp_secondary
SECONDARY_DB_USERNAME=root
SECONDARY_DB_PASSWORD=

# Log Ayarları
LOG_LEVEL=debug
LOG_PATH=storage/logs

# SCADA Ayarları
SCADA_UPDATE_INTERVAL=5000
SCADA_WEBSOCKET_URL=ws://localhost:8080

# Session Ayarları
SESSION_DRIVER=file
SESSION_LIFETIME=120

# Cache Ayarları
CACHE_DRIVER=file