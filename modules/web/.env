# Uygulama Ayarları
APP_NAME=koruPHP
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost:8000

# Veritabanı
DEFAULT_DB_DRIVER=mysql
DEFAULT_DB_HOST=localhost
DEFAULT_DB_PORT=3310
DEFAULT_DB_DATABASE=koruPHP
DEFAULT_DB_USERNAME=root
DEFAULT_DB_PASSWORD=

# Auth Configuration
AUTH_DEFAULT_PROVIDER=session
AUTH_DEFAULT_GUARD=web
AUTH_FALLBACK_SESSION=true

# JWT Settings
JWT_SECRET=your-super-secret-jwt-key-here
JWT_ALGORITHM=HS256
JWT_TTL=3600
JWT_REFRESH_TTL=86400

# External Auth
EXTERNAL_AUTH_ENABLED=true
EXTERNAL_AUTH_URL=http://localhost:3000/api/auth
EXTERNAL_AUTH_API_KEY=your-external-api-key

# Session Settings
SESSION_LIFETIME=120
SESSION_DRIVER=file

# Permission Cache
PERMISSION_CACHE_TTL=3600

# Rate Limiting
API_RATE_LIMIT_ENABLED=true
API_RATE_LIMIT_REQUESTS=100
API_RATE_LIMIT_WINDOW=3600

# Log Settings
LOG_LEVEL=debug
LOG_PATH=storage/logs